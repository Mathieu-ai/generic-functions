{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "CommonJS",
        "target": "ES2018",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "inlineSources": false,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "removeComments": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist"
    ]
}