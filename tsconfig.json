{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "lib": [
            "es5",
            "es2015",
            "es2016",
            "dom",
            "esnext"
        ],
        "types": [
            "node"
        ],
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "removeComments": false,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "target": "es6",
        "module": "esnext",
        "outDir": "dist",
        "declarationDir": "dist",
        "sourceMap": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}